<div class="col-10 offset-1 main">

	<h3>ProjectBTH search page</h3>
	<br />

	<div class="box">
		<%= simple_form_for @userlocation do |f| %>
			<%= f.input :searchterm, label: 'Enter an address, city/state, or zip-code:', hint: 'Examples: 123 Main St. Sacramento, CA OR Sacramento, CA OR 95841', placeholder: 'Where do you feel like going?' %>
			<br />
			<%= f.submit 'Find Bars', class: 'btn btn-primary' %>
		<% end %>
	</div>

</div>